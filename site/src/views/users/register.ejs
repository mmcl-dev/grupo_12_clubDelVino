            <!------------------------------------->
          </div>
          <div class="block-checkIcon-login-register">
            <!--Bloque para mostrar un grafico check si esta o no correctamente llenado el campo-->
            <% if(locals.errors){ %>
              <% if(errors.lastname){ %>
                <i class="fa fa-times"></i>
              <% } else { %>
                <i class="fa fa-check"></i>
              <% } %>
            <% } %>
            <!------------------------------------------------------------------------------------->
          </div>
        </div>

        <div class="control-field-login-register ">
          <div class="block-input-login-register">
            <input type="text" id="email" name="email" class="input-login-register-effect" placeholder autocomplete="off" value="<%= locals.oldData ? oldData.email : null %>">
            <label>Email</label>
            <span class="focus-border-login-register-effect"></span>
            <!--Mensaje de error desde el backend-->
            <% if( locals.errors && errors.email){ %> <p class="errorMessage"> <%= errors.email.msg %></p> <% } %>
            <!------------------------------------->
          </div>      
          <div class="block-checkIcon-login-register">
            <!--Bloque para mostrar un grafico check si esta o no correctamente llenado el campo-->
            <% if(locals.errors){ %>
              <% if(errors.email){ %>
                <i class="fa fa-times"></i>
              <% } else { %>
                <i class="fa fa-check"></i>
              <% } %>
            <% } %>
            <!------------------------------------------------------------------------------------->
          </div>
        </div>

        <div class="control-field-login-register ">
          <div class="block-input-login-register">
            <input type="password" id="password" name="password" class="input-login-register-effect" placeholder autocomplete="off">
            <label>Contrase√±a</label>
            <span class="focus-border-login-register-effect"></span>
            <!--Mensaje de error desde el backend-->
            <% if( locals.errors && errors.password){ %> <p class="errorMessage"> <%= errors.password.msg %></p> <% } %>
            <!------------------------------------->
          </div>
          <div class="block-checkIcon-login-register">
            <!--Bloque para mostrar un grafico check si esta o no correctamente llenado el campo-->
            <% if(locals.errors){ %>
              <% if(errors.password){ %>
                <i class="fa fa-times"></i>
              <% } else { %>
                <i class="fa fa-check"></i>
              <% } %>
            <% } %>
            <!------------------------------------------------------------------------------------->
          </div>
        </div>

        <div class="control-field-login-register ">
          <div class="block-input-login-register">
              <input type="file" id="image" name="image" class="abmProducts-input-effect">
              <label for="image">Imagen</label>
              <span class="focus-border-login-register-effect"></span>
              <!--Mensaje de error desde el backend-->
            <% if( locals.errors && errors.image){ %> <p class="errorMessage"> <%= errors.image.msg %></p> <% } %>
            <!------------------------------------->
          </div>      
          <div class="block-checkIcon-login-register">
            <!--Bloque para mostrar un grafico check si esta o no correctamente llenado el campo-->
            <% if(locals.errors){ %>
              <% if(errors.image){ %>
                <i class="fa fa-times"></i>
              <% } else { %>
                <i class="fa fa-check"></i>
              <% } %>
            <% } %>
            <!------------------------------------------------------------------------------------->
          </div>
        </div>

        <div class="control-form-button">
          <button type="submit" class="control-button">REGISTRARSE</button>
        </div> 
      </form>
    </section>

    <!------- FOOTER INICIO ------------>
    <%- include('../partials/footer.ejs') %>
    <!------- FOOTER FIN ---------------> 
    
  </body>
  <script src="/js/effects.js"></script>
</html>