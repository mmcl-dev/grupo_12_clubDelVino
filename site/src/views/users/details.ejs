<!DOCTYPE html>
<html lang="es">

<!-- HEAD INICIO-->
<%- include('../partials/head.ejs') %>
<!-- HEAD FIN-->

<body>
    
     <!------- HEADER INICIO ------------>
     <%- include('../partials/header.ejs') %>
     <!------- HEADER FIN ---------------->

        <!-- Perfil de usuario y actualizacion de datos -->
        <section class="content-form-login-register">
            <form action="/users/<%= user.id_user %>/userprofile"  method="GET" class="create-form" enctype="multiplart/form-data">
              <h1>PERFIL DE USUARIO</h1>

              <div class="control-field-login-register ">
                <div class="block-user-perfil">
                  <h3>Bienvenido</h3>
                  <span><%= user.first_name %>  <%= user.last_name %> (<%= user.user_type %>)</span>
                  <p>Email: <span><%= user.email %></span> </p>
                </div>      
              </div>

              <div class="container-image-perfil">
                <div class="content-image-perfil">
                  <img src="/img/users/<%= user.image %>" alt="imagenUser">
                </div>
              </div>
            
              <div class="control-form-button">
                <a href="/users/<%= user.id_user %>/userprofile"><button class="control-button-generic">Actualizar mis datos</button></a>
              </div>
              
            </form>

            <form action="/users/logout"  method="GET" class="create-form" enctype="multiplart/form-data">
              <div class="control-form-button">
                <a href="/users/logout"><button class="control-button-generic">Salir</button></a>
              </div>
            </form>
            
          </section>

    <!------- FOOTER INICIO ------------>
    <%- include('../partials/footer.ejs') %>
    <!------- FOOTER FIN --------------->

</body>
</html>