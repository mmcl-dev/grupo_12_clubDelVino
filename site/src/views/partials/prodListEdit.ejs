<% products.forEach (product => {  %>
<!-- CARD DEL PRODUCTO INICIO-->
<div class="conteiner-product">
    <a class="image-product" href="/products/<%= product.id_product %>/edit">
        <img src="/img/<%= product.image %>" alt="imagenProducto">
    </a>
    <a class="description-product" href="/products/<%= product.id_product %>/edit">
        <h3><%= product.product_name %></h3>
        <p>Varietal: <span><%= product.categorias.category_name %></span></p>
        <p>AÃ±o: <span><%= product.year %></span></p>
    </a>
