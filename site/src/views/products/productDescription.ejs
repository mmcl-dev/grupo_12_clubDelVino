 <!------- HEADER INICIO ------------>
 <%- include('../partials/header.ejs') %>
 <!------- HEADER FIN ---------------->

<!------   Producto -------------------------->
<h1 class="descriptionProduct-title">Descripción</h1>
    <section class="container">
        <div class="descriptionProduct-container">
            <section class="descriptionProduct-name">
                <h1 class="descriptionProduct-name-title">
                Blend de Malbec Cabernet Merlot
                </h1>
            </section>
            
            <section class="descriptionProduct-description">
                <p>
                Un blend de gran concentración, con aromas frutales y notas ahumadas de café y vainilla aportadas por su paso en barricas de Roble Francés.
                </p>
            </section>

            <form action="">
                <section class="descriptionProduct-details">
                    <div class="descriptionProduct-image">
                        <img src="/img/vino5.png" alt="imagen del producto">
                    </div>
                    <div class="descriptionProduct-productLines">
                        <p class="bodega">Bodega: <span>La Añorada</span></p>
                        <p class="description-widescreen">
                            Un blend de gran concentración, con aromas frutales y notas ahumadas de café y vainilla aportadas por su paso en barricas de Roble Francés.
                        </p>
                        <p class="year">Año: <span>2018</span></p>
                        <p class="type">Tipo: <span>Blanco</span></p>
                        <p class="price">Precio: <span>$500</span></p>
                        <p class="description">12 meses RF</p>
                        <div class="cantProd">
                            <label for="quantity">Cantidad</label>
                            <select name="quantity" id="quantity">
                                <option value="0">0</option>
                                <option value="0">1</option>
                                <option value="0">2</option>
                                <option value="0">3</option>
                                <option value="0">4</option>
                                <option value="0">5</option>
                                <option value="0">6</option>
                            </select>
                        </div>
                    </div> 
                </section>
                <div class="descriptionProduct-cartButton">
                    <button type="submit">Agregar al carrito</button>
                </div>
            </form>
        </div>
    </section>
