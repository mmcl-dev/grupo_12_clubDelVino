<!DOCTYPE html>
<html lang="es">

<!-- HEAD INICIO-->
<%- include('../partials/head.ejs') %>
<!-- HEAD FIN-->

<body>

 <!------- HEADER INICIO ------------>
 <%- include('../partials/header.ejs') %>
 <!------- HEADER FIN ---------------->

<!------   Producto -------------------------->
<h1 class="descriptionProduct-title">Editar Producto</h1>
    <section class="container">
        <div class="abmProducts-container">
                        
            <form action="/products/<%= product.id_product %>?_method=PUT" method="POST" enctype="multipart/form-data" class="abmProducts-mainfield">
                
                <div class="abmProducts-field ">
                    <div class="abmProducts-block-input">
                        <input type="text" id="product_name" name="product_name" class="abmProducts-input-effect" placeholder autocomplete="off" value="<%= product.product_name %>">
                        <label for="product_name">Nombre del producto</label>
                        <span class="abmProducts-focus-border-effect"></span>
                        <!--Mensaje de error desde el backend-->
                        <% if( locals.errors && errors.product_name){ %> <p class="errorMessage"> <%= errors.product_name.msg %></p> <% } %>
                        <!------------------------------------->
                    </div>      
                    <div class="abmProducts-block-checkIcon">
                        <!--Bloque para mostrar un grafico check si esta o no correctamente llenado el campo-->
                        <% if(locals.errors){ %>
                            <% if(errors.product_name){ %>
                            <i class="fa fa-times"></i>
                            <% } else { %>
                            <i class="fa fa-check"></i>
                            <% } %>
                        <% }else{ %>
                            <i class="fa fa-check"></i>
                        <% } %>
                        <!------------------------------------------------------------------------------------->
                    </div>
                </div>

                <div class="abmProducts-field ">
                    <div class="abmProducts-block-textArea">
                        <label for="description">Descripción del producto</label>
                        <textarea class='abmProducts-textArea' id="description" name="description" autocomplete="off" value="<%= product.description %>" rows="3" cols="50"><%= product.description %></textarea>
                        <!--Mensaje de error desde el backend-->
                        <% if( locals.errors && errors.description){ %> <p class="errorMessage fixedErrorMessageInTextArea"> <%= errors.description.msg %></p> <% } %>
                        <!------------------------------------->
                    </div> 
                    <div class="abmProducts-block-checkIcon">
                        <!--Bloque para mostrar un grafico check si esta o no correctamente llenado el campo-->
                        <% if(locals.errors){ %>
                            <% if(errors.description){ %>
                            <i class="fa fa-times"></i>
                            <% } else { %>
                            <i class="fa fa-check"></i>
                            <% } %>
                        <% }else{ %>
                            <i class="fa fa-check"></i>
                        <% } %>
                        <!------------------------------------------------------------------------------------->
                    </div>     
                </div>

                <div class="abmProducts-field ">
                    <div class="abmProducts-block-input">
                        <input type="text" id="wine_family" name="wine_family" class="abmProducts-input-effect" placeholder autocomplete="off"  value="<%= product.wine_family %>">
                        <label for="wine_family">Bodega</label>
                        <span class="abmProducts-focus-border-effect"></span>
                        <!--Mensaje de error desde el backend-->
                        <% if( locals.errors && errors.wine_family){ %> <p class="errorMessage"> <%= errors.wine_family.msg %></p> <% } %>
                        <!------------------------------------->
                    </div>      
                    <div class="abmProducts-block-checkIcon">
                        <!--Bloque para mostrar un grafico check si esta o no correctamente llenado el campo-->
                        <% if(locals.errors){ %>
                            <% if(errors.wine_family){ %>
                            <i class="fa fa-times"></i>
                            <% } else { %>
                            <i class="fa fa-check"></i>
                            <% } %>
                        <% }else{ %>
                            <i class="fa fa-check"></i>
                        <% } %>
                        <!------------------------------------------------------------------------------------->
                    </div>
                </div>

                <div class="abmProducts-field ">
                    <div class="abmProducts-block-input">
                        <label for="">Categoria</label>
                        <select name="category">
                        <% for (let i=0; i < category.length; i++) { %>
                            <% if (category[i].id_category == product.category_id) { %>
                                <option value="<%=category[i].id_category%>" selected><%=category[i].category_name%></option>
                            <% } else { %>
                                 <option value="<%=category[i].id_category%>"><%=category[i].category_name%></option>
                                 <% } %> 
                            <% } %>
                        </select>  
                        <!--Mensaje de error desde el backend-->
                        <% if( locals.errors && errors.category){ %> <p class="errorMessage"> <%= errors.category.msg %></p> <% } %>
                        <!------------------------------------->                      
                    </div>
                    <div class="abmProducts-block-checkIcon">
                        <!--Bloque para mostrar un grafico check si esta o no correctamente llenado el campo-->
                        <% if(locals.errors){ %>
                            <% if(errors.category){ %>
                            <i class="fa fa-times"></i>
                            <% } else { %>
                            <i class="fa fa-check"></i>
                            <% } %>
                        <% }else{ %>
                            <i class="fa fa-check"></i>
                        <% } %>
                        <!------------------------------------------------------------------------------------->
                    </div>

                </div>

                <div class="abmProducts-field ">
                    <div class="abmProducts-block-input">
                        <input type="text" id="year" name="year" class="abmProducts-input-effect" placeholder autocomplete="off" value="<%= product.year %>" >
                        <label for="year">Año</label>
                        <span class="abmProducts-focus-border-effect"></span>
                        <!--Mensaje de error desde el backend-->
                        <% if( locals.errors && errors.year){ %> <p class="errorMessage"> <%= errors.year.msg %></p> <% } %>
                        <!------------------------------------->
                    </div>      
                    <div class="abmProducts-block-checkIcon">
                        <!--Bloque para mostrar un grafico check si esta o no correctamente llenado el campo-->
                        <% if(locals.errors){ %>
                            <% if(errors.year){ %>
                            <i class="fa fa-times"></i>
                            <% } else { %>
                            <i class="fa fa-check"></i>
                            <% } %>
                        <% }else{ %>
                            <i class="fa fa-check"></i>
                        <% } %>
                        <!------------------------------------------------------------------------------------->
                    </div>
                </div>

                <div class="abmProducts-field ">
                    <div class="abmProducts-block-input">
                        <input type="text" id="price" name="price" class="abmProducts-input-effect" placeholder autocomplete="off" value="<%= product.price %>" >
                        <label for="price">Precio</label>
                        <span class="abmProducts-focus-border-effect"></span>
                        <!--Mensaje de error desde el backend-->
                        <% if( locals.errors && errors.price){ %> <p class="errorMessage"> <%= errors.price.msg %></p> <% } %>
                        <!------------------------------------->
                    </div>      
                    <div class="abmProducts-block-checkIcon">
                        <!--Bloque para mostrar un grafico check si esta o no correctamente llenado el campo-->
                        <% if(locals.errors){ %>
                            <% if(errors.price){ %>
                            <i class="fa fa-times"></i>
                            <% } else { %>
                            <i class="fa fa-check"></i>
                            <% } %>
                        <% }else{ %>
                            <i class="fa fa-check"></i>
                        <% } %>
                        <!------------------------------------------------------------------------------------->
                    </div>
                </div>

                <div class="abmProducts-field ">
                    <div class="abmProducts-block-input">
                        <input type="file" id="image" name="image" class="abmProducts-input-effect" placeholder autocomplete="off" >
                        <label for="image">Imagen</label>
                        <span class="abmProducts-focus-border-effect"></span>
                        <!--Mensaje de error desde el backend-->
                        <% if( locals.errors && errors.image){ %> <p class="errorMessage"> <%= errors.image.msg %></p> <% } %>
                        <!------------------------------------->
                    </div>      
                    <div class="abmProducts-block-checkIcon">
                        <!--Bloque para mostrar un grafico check si esta o no correctamente llenado el campo-->
                        <% if(locals.errors){ %>
                            <% if(errors.image){ %>
                            <i class="fa fa-times"></i>
                            <% } else { %>
                            <i class="fa fa-check"></i>
                            <% } %>
                        <% }else{ %>
                            <i class="fa fa-check"></i>
                        <% } %>
                        <!------------------------------------------------------------------------------------->
                    </div>
                </div>

                <div class="abmProducts-container-checkbox">
                    <h3 class="abmProducts-label-checkbox">Oferta</h3>
                    <div class="abmProducts-offer">
                        <% if (product.offer == 1) { %>
                            <input type="checkbox" id="offer" name="offer" checked >
                        <%  } else { %>
                            <input type="checkbox" id="offer" name="offer" >
                        <%  } %>
                        <label for="offer"></label>
                    </div>
                </div>
                
                <div class="abmProducts-field ">
                    <div class="abmProducts-block-input">
                        <input type="text" id="offerPrice" name="offerPrice" class="abmProducts-input-effect" placeholder autocomplete="off" value="<%= product.offer_price %>" >
                        <label for="offerPrice">Precio de oferta</label>
                        <span class="abmProducts-focus-border-effect"></span>
                    </div>      
                    <div class="abmProducts-block-checkIcon">
                        <i class="fa fa-check"></i>
                        <i class="fa fa-times"></i>
                    </div>
                </div>
                    

                <hr>
                
                <div class="abmProducts-guardar">
                    <button type="submit">Guardar producto</button>
                </div>
            </form>
        </div>
    </section>
  <!----------------------------------->
  <!------- FOOTER INICIO ------------>
  <%- include('../partials/footer.ejs') %>
  <!------- FOOTER FIN --------------->
</body>
</html>